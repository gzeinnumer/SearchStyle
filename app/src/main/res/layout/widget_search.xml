<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/def_margin"
        android:layout_marginTop="@dimen/space"
        android:layout_marginEnd="@dimen/def_margin"
        android:layout_marginBottom="@dimen/space"
        android:background="@drawable/background_search"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/et_Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/def_margin_half"
            android:layout_marginLeft="@dimen/def_margin_half"
            android:layout_weight="1"
            android:background="@drawable/background_search"
            android:drawableStart="@drawable/mygzn_search_icon"
            android:drawableLeft="@drawable/mygzn_search_icon"
            android:drawablePadding="@dimen/def_margin_half"
            android:hint="Search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/btn_Scan_Barcode2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/def_margin_half"
            android:layout_marginLeft="@dimen/def_margin_half"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/btnclear"
            android:layout_width="24dp"
            android:layout_height="30dp"
            android:layout_marginEnd="@dimen/def_margin_half"
            android:layout_marginRight="@dimen/def_margin_half"
            android:src="@drawable/mygzn_search_clear"
            android:visibility="invisible"
            tools:visibility="visible" />
    </LinearLayout>
</LinearLayout>